pipeline {
    agent any

    stages {
        stage('Build app') {
            steps {
                echo 'Building the project...'
                sh 'make build'  // Example shell command
            }
        }
        
        stage('Test app') {
            steps {
                echo 'Running tests...'
                sh 'make test'   // Example test command
            }
        }

        stage('Deploy app') {
            steps {
                echo 'Deploying the project...'
                sh 'make deploy' // Example deploy command
            }
        }
    }
}
