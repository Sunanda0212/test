pipeline {
    agent any

    stages {
        stage('Build app') {
            steps {
                echo 'hello.py'
                sh 'make build'  // Example shell command
            }
        }
        
        stage('Test app') {
            steps {
                echo 'hello.py'
                sh 'make test'   // Example test command
            }
        }

        stage('Deploy app') {
            steps {
                echo 'hello.py'
                sh 'make deploy' // Example deploy command
            }
        }
    }
}
